#include <stdio.h>

#include <string.h>

 

int main()

{

    char s[1000];  

    int i,n,c=0;

    gets(s);

    n=strlen(s);

 

    for(i=0;i<n/2;i++)  

    {

        if(s[i]==s[n-i-1])

        c++;

     }

     if(c==i)

         printf("1");

    else

        printf("0");     

    return 0;



}
